        // V·∫Ω bi·ªÉu ƒë·ªì t·ªïng h·ª£p
        drawOverallChart();

        // V·∫Ω c√°c bi·ªÉu ƒë·ªì ri√™ng l·∫ª
        chartData.forEach((ploData, index) => {
