              .attr('stroke-dasharray', '4,4')
              .attr('opacity', 0.8)
              .attr('d', line);
          }

          // ‚úÖ V·∫º POINTS V·ªöI CLASS NAMES RI√äNG BI·ªÜT
          if (ploData.achievedLine && ploData.achievedLine.data && ploData.achievedLine.data.length > 0) {
