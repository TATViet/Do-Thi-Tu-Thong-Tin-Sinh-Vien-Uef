          // ‚úÖ AXES V·ªöI KHO·∫¢NG C√ÅCH L·ªöN H∆†N
          const xAxisGroup = g.append('g')
            .attr('transform', `translate(0,${height + 15})`)
            .call(d3.axisBottom(xScale).tickFormat(d => formatNamHK(d)));
          
          xAxisGroup.selectAll('text')
