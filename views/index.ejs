        function hideTooltip() {
          tooltip
            .style("display", "none")
            .style("opacity", 0);
          
          // ‚úÖ RESET ALL POINTS IN ALL CHARTS
          d3.select('#chart-overall').selectAll('.chart-point').attr('r', 4).attr('stroke-width', 2);
          
